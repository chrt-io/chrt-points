{
  "name": "chrt",
  "version": "1.0.0",
  "description": "small atomic charting components",
  "main": "dist/chrt.js",
  "module": "src/index.j",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx"
    }
  },
  "scripts": {
    "test": "jest",
    "test:scales": "jest -i test/scales",
    "build": "rollup -c",
    "lint": "eslint src --fix",
    "watch": "npm-watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/chrt/exploration.git"
  },
  "author": "chrt",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/chrt/exploration/issues"
  },
  "homepage": "chrt.io",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@rollup/plugin-babel": "^5.0.2",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-root-import": "^6.5.0",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "npm-watch": "^0.6.0",
    "rollup": "1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-uglify": "^6.0.4",
    "watch": "^1.0.2"
  },
  "files": [
    "dist/**/*.js",
    "src/**/*.js"
  ]
}
